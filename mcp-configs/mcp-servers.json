{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub operations: PRs, issues, repos, code search"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${PROJECT_ROOT}"],
      "description": "Extended filesystem operations"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory across sessions"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Step-by-step reasoning for complex problems"
    },
    "azure": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-azure"],
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}",
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}"
      },
      "description": "Azure resource management and deployment"
    },
    "sql-server": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sqlserver"],
      "env": {
        "SQLSERVER_CONNECTION_STRING": "${SQLSERVER_CONNECTION_STRING}"
      },
      "description": "SQL Server database operations and queries"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      },
      "description": "PostgreSQL database operations"
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-vercel"],
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN}"
      },
      "description": "Vercel deployment and project management"
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-docker"],
      "description": "Docker container management"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-context7"],
      "description": "Live documentation lookup for frameworks"
    }
  },
  "notes": {
    "usage": "Copy the servers you need to ~/.claude/mcp-servers.json",
    "envVars": "Replace ${VAR} placeholders with actual values or set environment variables",
    "recommendation": "Enable max 10 servers to keep context window manageable"
  }
}
